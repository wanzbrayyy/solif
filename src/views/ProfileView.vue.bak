<template>
  <div class="profile-layout animate__animated animate__fadeIn">
    <div class="profile-card zoom-in">
      <div class="header-nav">
        <button @click="$router.push('/chat')" class="back-btn">
          <i class="fa-solid fa-arrow-left"></i>
        </button>
        <h2>Account Settings</h2>
      </div>

      <div class="profile-header">
        <div class="avatar-container">
          <img :src="form.avatar || defaultAvatar" class="avatar-img" />
          <label class="edit-badge">
             <i class="fa-solid fa-camera"></i>
             <input type="file" @change="handleFile" hidden accept="image/*">
          </label>
        </div>
        <div class="user-meta">
          <h3>{{ form.username }}</h3>
          <span class="tier-badge" :class="form.tier === 'Pro' ? 'pro' : 'free'">
            {{ form.tier || 'Free' }} Plan
          </span>
          <button v-if="form.tier !== 'Pro'" @click="upgradeTier" class="upgrade-link">
            Upgrade to Pro <i class="fa-solid fa-crown"></i>
          </button>
        </div>
      </div>

      <form @submit.prevent="updateProfile" class="settings-form">
        <div class="form-group">
          <label>Username</label>
          <div class="input-wrap">
            <i class="fa-regular fa-user"></i>
            <input v-model="form.username" type="text">
          </div>
        </div>

        <div class="form-group">
          <label>Email Address</label>
          <div class="input-wrap">
            <i class="fa-regular fa-envelope"></i>
            <input v-model="form.email" type="email">
          </div>
        </div>

        <div class="form-group">
          <label>New Password (Optional)</label>
          <div class="input-wrap">
            <i class="fa-solid fa-lock"></i>
            <input v-model="form.password" type="password" placeholder="Leave blank to keep current">
          </div>
        </div>

        <!-- 2FA Toggle -->
        <div class="form-group toggle-group">
          <div class="toggle-text">
            <span class="t-title"><i class="fa-solid fa-shield-halved"></i> Two-Factor Auth</span>
            <span class="t-desc">Secure account with authenticator app.</span>
          </div>
          <label class="switch">
            <input type="checkbox" v-model="form.is2FAEnabled">
            <span class="slider round"></span>
          </label>
        </div>

        <button type="submit" class="save-btn rubber-band-hover" :disabled="isLoading">
          <span v-if="isLoading"><i class="fa-solid fa-circle-notch fa-spin"></i> Saving...</span>
          <span v-else>Save Changes</span>
        </button>
      </form>
    </div>
  </div>
</template>

<script setup>
import { ref, onMounted } from 'vue'
import api from '../services/api'

const isLoading = ref(false)
const defaultAvatar = 'https://ui-avatars.com/api/?name=User&background=6366f1&color=fff'
const form = ref({
  username: '',
  email: '',
  password: '',
  avatar: '',
  tier: 'Free',
  is2FAEnabled: false
})

onMounted(() => {
  // Load data from localStorage (cached) or fetch fresh
  const userStr = localStorage.getItem('userData')
  if (userStr) {
    const user = JSON.parse(userStr)
    form.value = { ...form.value, ...user }
    form.value.password = '' // Don't show password hash
  }
})

const handleFile = (e) => {
  const file = e.target.files[0]
  if (file) {
    const reader = new FileReader()
    reader.onload = (e) => {
      // In Real App: Upload to Cloudinary/S3 and get URL
      // Here: Convert to Base64 for MongoDB string (limited size)
      form.value.avatar = e.target.result 
    }
    reader.readAsDataURL(file)
  }
}

const upgradeTier = () => {
  // Simulate Payment
  if(confirm("Upgrade to Pro Plan for $10/mo?")) {
    form.value.tier = 'Pro'
    alert("Welcome to Pro Plan! Save changes to persist.")
  }
}

const updateProfile = async () => {
  isLoading.value = true
  try {
    const token = localStorage.getItem('token')
    // Send token inside body for custom middleware or header via interceptor
    const res = await api.updateProfile({ token, ...form.value })
    
    localStorage.setItem('userData', JSON.stringify(res.data))
    alert('Profile updated successfully!')
  } catch (error) {
    alert('Failed to update profile.')
  } finally {
    isLoading.value = false
  }
}
</script>

